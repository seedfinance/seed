{
  "name": "seed",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test --verbose",
    "compile": "npx hardhat compile",
    "hardhat:deploy": "npx hardhat deploy --network hardhat",
    "mainnet:deploy": "npx hardhat deploy --network mainnet",
    "mainnet:verify": "npx hardhat --network mainnet etherscan-verify --solc-input",
    "testnet:deploy": "npx hardhat deploy --network testnet",
    "export": "npx hardhat export --export-all exports/deployments.json",
    "test:coverage": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" npx hardhat coverage",
    "test:gas": "cross-env REPORT_GAS=true npm run test",
    "lint": "concurrently \"npm run prettier\" && solhint -c .solhint.json contracts/**/*.sol",
    "prettier": "prettier --write test/**/*.ts && prettier --write contracts/**/*.sol"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.4.1",
    "@sushiswap/core": "^1.4.2",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.3.4",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.0-beta.47",
    "hardhat-deploy-ethers": "^0.3.0-beta.7",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2",
    "web3": "^1.3.4"
  }
}
